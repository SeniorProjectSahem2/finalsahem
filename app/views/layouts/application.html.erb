<!DOCTYPE html>
<html>
<head>
  <title>Sahem</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  
</head>

<nav class="navbar">
  <div class="container-fluid">
  <div class="container-fluid">
    <div class="navbar-header navbar-default">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <%= image_tag "logotransparent.png", class:'navbar-brand' %>
    </div>
    
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right"><br><br>
        <li class="active"><%= link_to root_path do %> Homepage <% end %></li>
        <li class="nav-divider"></li>
        <li><%= link_to items_url do %> All Items <% end %></li>
        <li class="nav-divider"></li>
        <% if user_signed_in? %>
          <li><%= link_to destroy_user_session_path, :method => :delete do %><i class="glyphicon glyphicon-log-out"></i> signout<% end %></li>
          <li data-behavior="notifications" data-notifications='<%= render template: "notifications/index", formats: [:json] %>'> 
          <a class="dropdown-toggle nav-link" type="button" data-behavior="notifications-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span data-behavior="unread-count"></span> <i class="glyphicon glyphicon-bell"></i></a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenu1" data-behavior="notification-items"></div>
          </li>
          <li><%= link_to  user_path(current_user.id) do %><i class="glyphicon glyphicon-user"> <%= current_user.name %></i><% end %></li>
          <% else %>
          <li><%= link_to user_session_url do %><i class="glyphicon glyphicon-log-in"></i> signin<% end %></li>
          <% end %>
      </ul>
    </div>
  </div>
  </div>
</nav>
  
  
<%= yield %>


<footer class="footer ">


    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-linkedin"></i></a>
    <a href="#"><i class="fa fa-github"></i></a>
    
    <br>

    <p class="footer-links">
      <a href="#">Homepage</a>
      ·
      <a href="#">All Items</a>
      ·
      <a href="#">Add New Item</a>
      ·
      <a href="#">Sign In</a>
    </p>
  
    <p>SAHEM &copy; 2017</p>

</footer>

</html>