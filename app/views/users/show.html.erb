	<div class="tab-content ">
	  
			  <div class="tab-pane active" id="1">
            <div class="container-fluid text-center row" >    
              <div class="row content">
                <div class="col-sm-12 sidenav">
                  <br><br>
  		            <div class="account example"></div>
  		            <br><br><br>
  	              <%= render "profileForm" %>
  	            	<br><br><br><br><br><br> 
                </div>
              </div>
            </div>
			  </div>
				
				<div class="tab-pane" id="2">
				  <div class="container-fluid text-center row" >    
            <div class="row content">
              <div class="col-sm-12 sidenav">
                <% if current_user.Rental_request.count ==0 %>
                  <h3 id="usershowpadd">You don't have any request notifications.</h3>
                	<br>
                	<div class="btn-group" role="group" aria-label="userShowButtons">
                    <button type="button" class="btn btn-default btn-lg"><%= link_to new_item_path do %>  Lend an Item  <% end %></button>
                  </div>
                <% else %>
                  <%= render :partial =>'rentals/all_requests' %>
                <% end %>
				      </div>
				     </div>
				  </div>
			</div>
				
        <div class="tab-pane" id="3">
          <div class="container-fluid text-center row" >    
            <div class="row content">
              <div class="col-sm-12 sidenav">
                <% if current_user.ongoing_transaction.count ==0 %>
                  <h3 id="usershowpadd">You don't have any transactions.</h3>
            		  <br>
            		  <div class="btn-group" role="group" aria-label="userShowButtons">
                    <button type="button" class="btn btn-default btn-lg">Lend an Item</button>
                  </div>
                <% else %>
                  <%= render :partial =>'transactions/history' %>
                <% end %>
				      </div>
			    	</div>
				  </div>
				</div>
				
			  <div class="tab-pane" id="4">
          <div class="container-fluid text-center row" >    
            <div class="row content">
              <div class="col-sm-12 sidenav">
                  <%= render partial: 'items/items_list', locals: { items: Item.where(user_id: current_user.id)} %>
              </div>
            </div>
          </div>
        </div>
				
			</div>
