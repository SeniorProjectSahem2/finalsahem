<p id="notice"><%= notice %>
<div class="container-fluid text-center">    
  <div class="row content items">
    
    
    
    <div class="col-sm-1 sidenav"></div>
    
    
    
    <div class="col-sm-10 text-left">
      <div class="container-fluid">
      <!--<!%= link_to 'New Rental', new_rental_path, class:'btn btn-default' %>-->
      <h2>Rental requests</h2>
      <p>Below are your rental requests</p>            
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Item</th>
            <th>Start date</th>
            <th>End date</th>
            <th>number of days</th>
            <th colspan="2"></th>
            <!--<th colspan="2"></th>-->
          </tr>
        </thead>
        <tbody>
          <% @rentals.pending.each do |rentals| %>
          <tr>
            <td><%= rentals.user.name %></td>
            <td><%= rentals.item.name %></td>
            <!--<td><img src="https://s3.amazonaws.com/uifaces/faces/twitter/fffabs/128.jpg" class="media-photo" height=75 width=75></td>-->
            <td><%= rentals.start_date %></td>
            <td><%= rentals.end_date %></td>
            <td><%= rentals.days %></td>
    
           <td> <%= link_to('Accept', rental_change_to_accept_path(:rental_id =>rentals.id), :method => :put, :confirm => "Sure?", class:'btn btn-success') %></td>
            <td button type="submit" class="btn btn-danger">Decline</td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
    </div>
    
    
    <div class="col-sm-1 sidenav"></div>
    
    
  </div>
</div>