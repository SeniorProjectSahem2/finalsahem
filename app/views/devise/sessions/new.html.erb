<div class="container-fluid text-left row">    
	  <div class="row content">
	    
	    <div class="col-sm-3 sidenav">
      </div>
      
      <div class="col-sm-6"> 
      
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
      <div id= "myform" class="container">
        
      <h1>Log In</h1><br><br>

      <div id= "myfield" class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :id => "fieldsize" %>
      </div><br>
    
      <div id= "myfield" class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", :id => "fieldsize" %>
      </div>
      <br>
      <% if devise_mapping.rememberable? -%>
        <div id= "myfield" class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div id= "mybutton" class="actions">
        <%= f.submit "Log in",:id => "usernewbutt" %>
      </div>
      
      <div id= mylink2>
       
        <%= render "devise/shared/links" %>
      </div>
      </div>
    <% end %>
          </div>
    
          <div class="col-sm-3 sidenav">
          </div>
    </div>
</div>