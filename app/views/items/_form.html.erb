<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group col-sm-6">
      <%= f.label " " %> <b>Item Name*</b>
      <div>
      <%= f.text_field :name, class:'form-control' %>
      </div>
      </div>
      
   <div class="form-group col-sm-6">
      <%= f.label " " %> <b>Item Description/Specifications*</b>
      <div>
      <%= f.text_area:description, class:'form-control', placeholder:"Suggestions: Condition of item, How old is it? Model type (if relevant), Color,  Durability, etc." %>
      </div>
    </div>
    
    
  <div class="form-group col-sm-6">
    <%= f.label " " %> <b>Item Size*</b>
    <div>
    <%= f.text_field :size, class:'form-control', placeholder:"Suggestions: Dimensions in cm, Refernece to another standarrd sized object." %>
  </div>
  </div>
  
    <div class="form-group col-sm-6">
    <%= f.label :daily_price %>* (QAR)
    <div>
    <%= f.text_field :daily_price, class:'form-control' %>
  </div>
  </div> 
  
    <div class="form-group col-sm-6">
    <%= f.label " " %> <b>Item Weight*</b> (Kg)
    <div>
    <%= f.text_field :weight, class:'form-control' %>
  </div>
  </div> 
 
    <div class="form-group col-sm-6">
    <%= f.label :weekly_price %>* (QAR)
    <div>
    <%= f.text_field :weekly_price, class:'form-control' %>
  </div>
  </div>
  
  <div class="form-group col-sm-6">
    <%= f.label :quantity %>*
    <div>
    <%= f.text_field :quantity, class:'form-control' %>
  </div>
  </div> 



  <div class="form-group col-sm-6">
    <%= f.label :monthly_price %>* (QAR)
    <div>
    <%= f.text_field :monthly_price, class:'form-control' %>
  </div>
  </div> 


    <div class="form-group col-sm-6 dropdown">
      <%= f.label :category_id %>*
      <div>
        <%= f.collection_select  :category_id, Category.all,  :id , :name, :prompt => "Select category" %>
      </div>
    </div>
  
    <div class="actions form-group">
      <%= f.submit id:'itemShowButt2' %>
      <%= link_to 'Cancel', items_path, class:'btn btn-default', id:"newItemBack" %>
      <br><br><br><br><br><br><br>
    </div>
    
<% end %>


